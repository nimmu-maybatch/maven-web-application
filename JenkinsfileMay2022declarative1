pipeline{
    agent any
    
    tools {
        maven "maven3.8.5"
    }
    //build pollSCM
    triggers {
  pollSCM ('* * * * *')
  cron ('* * * * *')
}
options{
timestamps()
  buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
}

    
stages{
//get the code from github
   stage('CheckoutCode'){
       steps{
           slacknotifications("STARTED")
        git branch: 'development', credentialsId: 'c26342a2-778b-43fc-a447-46032039fcd6', url: 'https://github.com/nimmu-maybatch/maven-web-application.git'
    }
   }
    stage('Build'){
        steps{
    sh "mvn clean package"
    }
    }
    
//upload artifacts into nexus repo
stage('upload artifacts into nexus'){
    steps{
        sh "mvn deploy"
    }
}

//deploy application into tomcat server
stage('Deploy App Into Tomcat Server'){
    steps{
        sshagent(['c9e78cd0-a3b6-47cc-881b-da8b5ebfc4fd']) {
     sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@65.0.184.39:/opt/apache-tomcat-9.0.65/webapps/"
}
        
    }
    }
}//stages closing

post{
    success{
        slacknotifications(currentBuild.result)
    }
    failure{
        slacknotifications(currentBuild.result)
        
    }
}


}//pipeline closing


def slacknotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}

